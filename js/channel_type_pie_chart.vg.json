{
    "$schema": "https://vega.github.io/schema/vega-lite/v5.json",
    "width": 285,
    "height": 250,
    "title": { "text": "Channel Type Pie Chart" },
    "data": {"url": "https://raw.githubusercontent.com/jcha0157/assignment2/main/data/Global_YouTube_Statistics.csv"},
    "mark": {"type": "arc", "tooltip": true},
    "params": [{
      "name": "industry",
      "select": {"type": "point", "fields": ["channel_type"]},
      "bind": "legend"
    }],
    "encoding": {
      "theta": {"aggregate": "count", "field": "Youtuber", "type": "quantitative", "stack": "normalize", "title": "Number of Top Creators"},
      "color": {"field": "channel_type", "type": "nominal", "scale": {"range": ["#8c8b8b", "#a5a5a4", "#a63603", "#fdbe85", "#e6550d", "#d0d0d0", "#fd8d3c","#7a7979"]}, "title": "Channel Type", "legend": {"values": ["Entertainment", "Music", "Others", "Games", "People", "Comedy", "Education", "News"]}},
      "order": {"aggregate": "count", "field": "Youtuber", "sort": "descending"},
      "opacity": {
        "condition": {"param": "industry", "value": 1},
        "value": 0.2
      }
    },
    "config": {
      "view": {
        "stroke": null
      },
     "legend": {
        "titleFont": "PT Serif"
      },
      "title": {
        "font": "PT Serif",
        "fontSize": 16,
        "fontWeight": 600
      }
    }
  }